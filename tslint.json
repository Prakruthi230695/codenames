{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "defaultSeverity": "warning",
  "rules": {
    "interface-name": [true, "never-prefix"],
    "interface-over-type-literal": false,
    "jsx-boolean-value": [true, "never"],
    "ordered-imports": [
      false
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/**/*.test.tsx",
      "src/*.test.tsx"
    ]
  }
}
